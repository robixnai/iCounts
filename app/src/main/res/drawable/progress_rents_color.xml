<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="13dip" />
            <solid
                android:angle="270"
                android:centerY="0.75"
                android:color="@color/custom_progress_background" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="13dip" />
                <gradient
                    android:angle="180"
                    android:centerY="0.75"
                    android:endColor="@color/custom_progress_green_progress"
                    android:startColor="@color/custom_progress_red_progress" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="13dip" />
                <gradient
                    android:angle="180"
                    android:centerY="0.75"
                    android:endColor="@color/custom_progress_red_progress"
                    android:startColor="@color/custom_progress_green_progress" />
            </shape>
        </clip>
    </item>

</layer-list>